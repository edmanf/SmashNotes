<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/player_character"
            tools:text="Rosalina &amp; Luma"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content" android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="@string/game_vs_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/player_character" android:id="@+id/textView"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/player_character"
            android:layout_marginStart="4dp"/>
    <TextView
            android:id="@+id/opponent_character"
            tools:text="Rosalina &amp; Luma"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/view2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:background="#DDDDDD"
            android:layout_height="0dp"
            android:layout_width="1dp"
            app:layout_constraintTop_toTopOf="@+id/opponent_character"
            app:layout_constraintBottom_toBottomOf="@+id/opponent_character" android:id="@+id/view2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/stage"
            tools:text="Pokemon Stadium 2"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:gravity="center_horizontal"
            app:layout_constraintHorizontal_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/opponent_character"
            app:layout_constraintTop_toTopOf="@+id/opponent_character" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="4dp"/>
    <View
            android:background="#DDDDDD"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/result"
            app:layout_constraintBottom_toBottomOf="@+id/result" app:layout_constraintEnd_toStartOf="@+id/result"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/view"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:id="@+id/result"
            tools:text="W"
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/player_character"
            app:layout_constraintBottom_toBottomOf="@+id/player_character"
            android:layout_marginEnd="8dp"
    />
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent=".5"
            android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>