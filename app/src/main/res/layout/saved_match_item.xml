<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/player_character"
            tools:text="Player Character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/result"
            tools:text="W/L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/player_character"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/player_character"
            app:layout_constraintBottom_toBottomOf="@+id/player_character"/>
    <TextView
            android:id="@+id/opponent_character"
            tools:text="Opponent Character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/player_character"
            app:layout_constraintBottom_toBottomOf="@+id/player_character"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/result"
            android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                       android:id="@+id/barrier2" app:barrierDirection="left"
                                       app:layout_constraintTop_toTopOf="parent"
                                       tools:layout_editor_absoluteX="411dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>